<h2 class="text-center">プロフィール編集</h2>
<div class="card card-center" style="max-width:500px;">
  <div class="card-body">
    <%= form_with(model: @user, local: true) do |f| %>
    <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-warning">
      <% @user.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
    <% end %>
    <div class="mb-3">
    <%= f.label :name, class:"form-label" %>
    <%= f.text_field :name, class:"form-control form-control-sm" %>
    </div>
    <div class="mb-3">
    <%= f.label :email, class:"form-label"  %>
    <%= f.text_field :email, class:"form-control form-control-sm" %>
    </div>
    <div class="mb-3">
    <%= f.label :avatar, class:"form-label"  %>
    <%= f.file_field :avatar, class:"form-control form-control-sm" %>
    </div>
    <div class="mb-3">
    <%= f.label :password, class:"form-label" %>
    <%= f.password_field :password, class:"form-control form-control-sm" %>
    </div>
    <div class="text-center">
    <%= f.submit "変更", class:"btn btn-outline-dark btn-sm"  %>
    </div>
    <% end %>
  </div>
</div>
