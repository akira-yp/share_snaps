<!DOCTYPE html>
<html>
  <head>
    <title>ShareSnaps</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="sticky-top">
      <div class="container-fluid">
        <div class="row justify-content-between">
          <div class="col-6">
            <h2>SHARE SNAPS</h2>
          </div>
          <div class="col-6 d-flex justify-content-end">
            <% if loged_in? %>
            <%= link_to "HOME", users_path ,class:"p-2" %>
            <%= link_to "EXPLORE", pictures_path ,class:"p-2"%>
            <%= link_to "LOGOUT", session_path(@current_user.id), {method: :delete, class:"p-2" }%>
            <%= link_to "SHARE", new_picture_path ,class:"p-2" %>
            <%= link_to "PROFILE", user_path(@current_user.id) ,class:"p-2" %>
            <% else %>
            <%= link_to "SignUp", new_user_path ,class:"p-2" %>
            <%= link_to "Login", new_session_path ,class:"p-2" %>
            <% end %>
          </div>
        </div>
      </div>
    </header>
    <div class="main">
    <%= notice %>
    <%= yield %>
    </div>
  </body>
</html>
