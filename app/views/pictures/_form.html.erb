<h2 class="text-center">New Posts</h2>
<div class="card card-center" style="max-width:500px;">
  <div class="card-body">
    <%= form_with(model: @picture, local: true, url: choose_new_or_edit ) do |f| %>
      <% if @picture.errors.any? %>
      <div id="error_explanation" class="alert alert-warning">
        <% @picture.errors.full_messages.each do |message| %>
        <p><%= message %></p>
        <% end %>
      </div>
      <% end %>
      <div class="mb-3">
        <%= f.label :content, class:"form-label" %>
        <%= f.text_field :content, class:"form-control form-control-sm" %>
      </div>
      <div class="form-group mb-3">
          <%= f.label :image, class:"control-label" %>
          <%= f.file_field :image, class:"filestyle", "data-buttonText": "ファイル選択" %>
      </div>
      <div class="text-center">
        <%= f.submit "送信", class:"btn btn-outline-dark btn-sm" %>
      </div>
    <% end %>
  </div>
</div>
