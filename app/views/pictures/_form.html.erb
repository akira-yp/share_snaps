<h2 class="text-center">New Posts</h2>
<div class="card card-center" style="max-width:500px;">
  <div class="card-body">
    <%= form_with(model: @picture, local: true, url: choose_new_or_edit ,class:"needs-validation") do |f| %>
      <% if @picture.errors.any? %>
        <div id="error_explanation" class="alert alert-warning">
          <% @picture.errors.full_messages.each do |message| %>
            <p><%= message %></p>
          <% end %>
        </div>
      <% end %>
      <div class="mb-3">
        <%= f.label :content, class:"form-label" %>
        <%= f.text_field :content, class:"form-control form-control-sm" %>
      </div>
      <div class="mb-3">
        <%= f.label :image, class:"form-label"%>
        <div class="custom-file">
          <%= f.file_field :image, class:"custom-file-input",id:"inputFile01",required:"required" %>
          <label class="custom-file-label" id="selectedFiles" for="inputFile01" data-browse="参照">
            <% if @file_name %>
              <%= @file_name %>
            <% else %>
              ファイルを選択...
            <% end %>
          </label>
        </div>
        <div class="invalid-feedback">画像ファイルを選択してください</div>
      </div>
      <div class="text-center">
        <%= f.submit "送信", class:"btn btn-outline-dark btn-sm submit" %>
      </div>
    <% end %>
  </div>
</div>
