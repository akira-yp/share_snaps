<h2>プロフィール編集</h2>
<%= form_with(model: @user, local: true) do |f| %>
<% if @user.errors.any? %>
  <div id="error_explanation">
  <% @user.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>
  </div>
<% end %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :email %>
<%= f.text_field :email %>
<%= f.label :avatar %>
<%= f.file_field :avatar %>
<%= f.label :password %>
<%= f.password_field :password %>
<%= f.submit "変更", class:"btn btn-outline-dark btn-sm"  %>
<% end %>
